extends layout

block title
  title= _("pages-tasks-next-title")

block content
  section.section
    .container
      h1.title= _("pages-tasks-next-title")

      #tasks(
        hx-get=url_for("tasks.next")
        hx-trigger="TasksChanged from:body delay:10ms"
        hx-indicator="#overlay"
        hx-disinherit="*"
      )
        block tasks
          include mixins/list_of_tasks

          #overlay: .spinner

          if tasks
            +list_of_tasks(tasks)
          else
            article.message.is-success
              .message-body!= _("pages-tasks-next-empty-html", url_waiting=url_for("tasks.waiting"), url_scheduled=url_for("tasks.scheduled"), url_someday=url_for("tasks.someday"))
