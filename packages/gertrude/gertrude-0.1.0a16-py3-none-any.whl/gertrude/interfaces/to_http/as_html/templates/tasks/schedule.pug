extends layout

block title
  title= _("pages-tasks-schedule-title")

block modal
  .modal.is-active(_="on closeModal remove me")
    .modal-background(_="on click trigger closeModal then halt default")
    .modal-card
      header.modal-card-head
        p.modal-card-title= _("pages-tasks-schedule-title")
        a.delete(
          href=url_for("tasks.display", id=task.id)
          _="on click trigger closeModal then halt default"
          aria-label=_("pages-modal-close")
        )

      section.modal-card-body
        form(
          method="POST"
          action=url_for("tasks.schedule", id=task.id)
          hx-boost="true"
          hx-target="#modal"
        )
          input(type="hidden" name="csrf_token" value=generate_csrf_token())
          .field.is-grouped
            - var classes = "is-danger" if errors.date else ""
            .control.is-expanded: input.input(
              class=classes
              type="date"
              name="date"
              value=values.date
              min=min_date
            )
              if errors.date
                p.help.is-danger= errors.date
              p.help= _("pages-tasks-schedule-date-help")
            .control: button.button.is-info(
              _="on click set the (value of the previous <input/>) to '#{next_week}' then halt"
            )=_("pages-tasks-schedule-next-week")
            .control: button.button.is-info(
              _="on click set the (value of the previous <input/>) to '#{next_month}' then halt"
            )=_("pages-tasks-schedule-next-month")

          .field.is-grouped
            .control: button.button.is-success(type="submit")
              span.icon: i.fas.fa-calendar(aria-hidden="true")
              span= _("pages-tasks-schedule-submit")
            .control
              a.button(
                href=url_for("tasks.display", id=task.id)
                _="on click trigger closeModal then halt default"
              )
                span.icon: i.fas.fa-ban(aria-hidden="true")
                span= _("pages-tasks-schedule-cancel")
