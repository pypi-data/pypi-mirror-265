extends layout

block title
  title= _("pages-tasks-scheduled-title")

block content
  section.section
    .container
      h1.title= _("pages-tasks-scheduled-title")

      #tasks
        block tasks
          if tasks
            include mixins/list_of_tasks
            +list_of_tasks(tasks)
          else
            article.message.is-success
              .message-body: p= _("pages-tasks-scheduled-empty")
