<TrackerPsychoMoodStatsScreen>:
    name: "tracker_psycho_mood_stats"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 5
        spacing: 10

        Image:
            id: mood_plot_image
            texture: root.mood_plot

        Image:
            id: energy_plot_image
            texture: root.energy_plot
            center_x: self.parent.center_x
            center_y: self.parent.center_y

