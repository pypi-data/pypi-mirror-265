
<TrackerLifestylePactivityStatsScreen>:
    name: "tracker_lifestyle_pactivity_stats"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 5
        spacing: 10

        Image:
            id: pa_plot_image
            texture: root.pa_plot

        Image:
            id: steps_plot_image
            texture: root.steps_plot
            center_x: self.parent.center_x
            center_y: self.parent.center_y

